---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import LandingResources from "../components/LandingResources.astro";
import LandingHero from "../components/LandingHero.astro";
import LandingAbout from "../components/LandingAbout.astro";

const currentYear = new Date().getFullYear();
const timeDiff = Math.abs(Date.now() - new Date("1995-09-06").getTime());
const age = Math.floor(timeDiff / (1000 * 3600 * 24) / 365.25);
---

<Layout title="Home">
  <main
    class="min-h-screen max-w-screen-md container mx-auto flex items-center"
  >
    <div
      class="flex flex-col md:rounded-lg overflow-hidden bg-white md:border border-gray-300 h-screen md:h-auto"
    >
      <LandingHero />
      <div class="flex-1 flex flex-col px-8 py-8 gap-8 md:flex-row">
        <LandingAbout />
        <LandingResources />
      </div>
      <section class="bg-blue-900 py-2 text-center">
        <p class="text-blue-200">
          Simen Abelsen &copy; {currentYear}
        </p>
      </section>
    </div>
  </main>
</Layout>
